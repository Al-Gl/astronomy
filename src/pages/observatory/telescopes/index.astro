<style>
  /* Hero Section */
  .hero {
    padding: 6rem 0 4rem 0;
    text-align: center;
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 400;
    margin: 0 0 1.5rem 0;
    letter-spacing: 0.02em;
    color: white;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 1.0625rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
    max-width: 40rem;
    margin: 0 auto;
    line-height: 1.8;
  }

  /* Introductory Content */
  .intro {
    padding: 2rem 0 4rem 0;
    max-width: 900px;
    margin: 0 auto;
  }

  .intro-text {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9375rem;
    font-weight: 300;
    line-height: 1.8;
    margin: 0 0 1.5rem 0;
    text-align: center;
  }

  .intro-text:last-child {
    margin-bottom: 0;
  }

  /* Articles List */
  .articles {
    padding: 3rem 0 4rem 0;
  }

  .articles-list {
    max-width: 900px;
    margin: 0 auto;
  }

  .article-item {
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .article-item:first-child {
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .article-link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    padding: 2rem 1.5rem;
    text-decoration: none;
    transition: background 0.2s ease;
  }

  .article-link:hover {
    background: rgba(255, 255, 255, 0.02);
  }

  .article-content {
    flex: 1;
  }

  .article-title {
    font-size: 1.375rem;
    font-weight: 400;
    margin: 0 0 0.75rem 0;
    color: white;
    letter-spacing: 0.01em;
    transition: color 0.2s ease;
  }

  .article-link:hover .article-title {
    color: rgba(255, 255, 255, 0.85);
  }

  .article-description {
    font-size: 0.9375rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.5);
    line-height: 1.7;
    margin: 0 0 0.875rem 0;
  }

  .article-meta {
    font-size: 0.8125rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.35);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .article-arrow {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    color: rgba(255, 255, 255, 0.3);
    transition: all 0.2s ease;
  }

  .article-link:hover .article-arrow {
    color: rgba(255, 255, 255, 0.6);
    transform: translateX(4px);
  }

  /* About Section */
  .about {
    padding: 4rem 0 6rem 0;
    max-width: 900px;
    margin: 0 auto;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .about .container {
    text-align: center;
  }

  .about-title {
    font-size: 1.5rem;
    font-weight: 400;
    color: white;
    margin: 0 0 2rem 0;
    letter-spacing: 0.01em;
  }

  .about-text {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.9375rem;
    font-weight: 300;
    line-height: 1.8;
    margin: 0 0 1.5rem 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .about-text:last-child {
    margin-bottom: 0;
  }

  /* Responsive adjustments */
  @media (min-width: 768px) {
    .article-link {
      padding: 2.5rem 2rem;
    }

    .article-title {
      font-size: 1.5rem;
    }

    .article-description {
      font-size: 1rem;
    }
  }
</style>
