---
import MainLayout from '../layouts/MainLayout.astro';

// Fetch NASA Astronomy Picture of the Day
let apodData = null;
let apodError = false;

try {
  const NASA_API_KEY = import.meta.env.NASA_API_KEY || 'DEMO_KEY';
  const response = await fetch(`https://api.nasa.gov/planetary/apod?api_key=${NASA_API_KEY}`);

  if (response.ok) {
    apodData = await response.json();
  } else {
    console.error('APOD API error:', response.status, response.statusText);
    apodError = true;
  }
} catch (error) {
  console.error('Failed to fetch APOD:', error);
  apodError = true;
}
---

<MainLayout
  title="The Astronomy Space - Explore the Cosmos"
  description="Your gateway to astronomical data, celestial catalogs, and cosmic chronicles"
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1 class="hero-title">The Astronomy Space</h1>
      <p class="hero-subtitle">
        Explore the infinite wonders of the cosmos through data, observation, and discovery
      </p>
    </div>
  </section>

  <!-- Preview Cards -->
  <section class="preview-cards">
    <div class="container">
      <div class="cards-grid">

        <a href="/observatory" class="glass-card">
          <div class="card-icon">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="5" cy="5" r="1" fill="currentColor" opacity="0.5"/>
              <circle cx="19" cy="8" r="0.5" fill="currentColor" opacity="0.3"/>
              <path d="M6 18L18 6" stroke="currentColor" stroke-width="1.5"/>
              <circle cx="5" cy="19" r="2.5" stroke="currentColor" stroke-width="1.5"/>
              <circle cx="19" cy="5" r="1.5" stroke="currentColor" stroke-width="1.5"/>
            </svg>
          </div>
          <h2>Observatory</h2>
          <p>Real-time astronomical observations and celestial tracking tools</p>
          <span class="card-link">Explore →</span>
        </a>

        <a href="/atlas" class="glass-card">
          <div class="card-icon">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="6" cy="6" r="1.5" fill="currentColor"/>
              <circle cx="18" cy="8" r="1.5" fill="currentColor"/>
              <circle cx="12" cy="12" r="1.5" fill="currentColor"/>
              <circle cx="5" cy="18" r="1.5" fill="currentColor"/>
              <circle cx="19" cy="17" r="1.5" fill="currentColor"/>
              <line x1="6" y1="6" x2="12" y2="12" stroke="currentColor" stroke-width="0.5" opacity="0.4"/>
              <line x1="18" y1="8" x2="12" y2="12" stroke="currentColor" stroke-width="0.5" opacity="0.4"/>
              <line x1="12" y1="12" x2="5" y2="18" stroke="currentColor" stroke-width="0.5" opacity="0.4"/>
              <line x1="12" y1="12" x2="19" y2="17" stroke="currentColor" stroke-width="0.5" opacity="0.4"/>
            </svg>
          </div>
          <h2>Cosmic Atlas</h2>
          <p>Database of stars, planets, galaxies, and deep-sky objects</p>
          <span class="card-link">Browse →</span>
        </a>

        <a href="/chronicles" class="glass-card">
          <div class="card-icon">
            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle cx="18" cy="6" r="2" fill="currentColor"/>
              <path d="M16 8C14 10 10 12 6 14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
              <path d="M15 9C13 11 9 14 5 17" stroke="currentColor" stroke-width="1" opacity="0.5" stroke-linecap="round"/>
              <circle cx="4" cy="4" r="0.5" fill="currentColor" opacity="0.4"/>
              <circle cx="20" cy="12" r="0.5" fill="currentColor" opacity="0.3"/>
            </svg>
          </div>
          <h2>Cosmic Chronicles</h2>
          <p>Latest discoveries, events, and insights from the universe</p>
          <span class="card-link">Read →</span>
        </a>

      </div>
    </div>
  </section>

  <!-- NASA Astronomy Picture of the Day -->
  {apodData && !apodError && (
    <section class="apod-section">
      <div class="container">
        <h2 class="apod-title">Astronomy Picture of the Day</h2>
        <p class="apod-date">{new Date(apodData.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>

        <div class="apod-content">
          <div class="apod-media">
            {apodData.media_type === 'image' ? (
              <a href={apodData.hdurl || apodData.url} target="_blank" rel="noopener noreferrer">
                <img
                  src={apodData.url}
                  alt={apodData.title}
                  class="apod-image"
                  loading="lazy"
                />
              </a>
            ) : (
              <iframe
                src={apodData.url}
                title={apodData.title}
                class="apod-video"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              ></iframe>
            )}
          </div>

          <div class="apod-text">
            <h3 class="apod-subtitle">{apodData.title}</h3>
            <p class="apod-explanation">{apodData.explanation}</p>
            {apodData.copyright && (
              <p class="apod-copyright">Image Credit: {apodData.copyright}</p>
            )}
          </div>
        </div>

        <p class="apod-nasa-credit">
          Powered by <a href="https://www.nasa.gov/" target="_blank" rel="noopener noreferrer" class="nasa-link">NASA</a> Astronomy Picture of the Day
        </p>
      </div>
    </section>
  )}

  <!-- Featured Articles Section -->
  <section class="featured-articles">
    <div class="container">
      <h2 class="section-title">Featured Articles</h2>
      <p class="section-subtitle">Explore our most popular cosmic content</p>

      <div class="featured-grid">
        <!-- Earth -->
        <a href="/atlas/solar-system/earth/" class="featured-card glass-card">
          <span class="category-badge atlas">Solar System</span>
          <h3>Earth: Our Home Planet</h3>
          <p>Complete guide to Earth covering its unique features, atmosphere, geology, the Moon, and why our planet is the only known world to harbor life.</p>
          <span class="card-arrow">Read Article →</span>
        </a>

        <!-- Mars -->
        <a href="/atlas/solar-system/mars/" class="featured-card glass-card">
          <span class="category-badge atlas">Solar System</span>
          <h3>Mars: The Red Planet</h3>
          <p>Explore the geology, polar ice caps, ancient riverbeds, and the ongoing search for life on the rusty red neighbor to Earth.</p>
          <span class="card-arrow">Read Article →</span>
        </a>

        <!-- Jupiter -->
        <a href="/atlas/solar-system/jupiter/" class="featured-card glass-card">
          <span class="category-badge atlas">Solar System</span>
          <h3>Jupiter: King of Planets</h3>
          <p>Discover the massive gas giant with its Great Red Spot, powerful magnetosphere, and 95 known moons orbiting the largest planet in our solar system.</p>
          <span class="card-arrow">Read Article →</span>
        </a>

        <!-- Stargazing in Scandinavia -->
        <a href="/chronicles/stargazing-scandinavia/" class="featured-card glass-card">
          <span class="category-badge chronicles">Chronicles</span>
          <h3>Stargazing in Scandinavia</h3>
          <p>Complete guide to observing dark skies and Northern Lights across Norway, Sweden, Finland, and Iceland.</p>
          <span class="card-arrow">Read Article →</span>
        </a>

        <!-- Black Holes -->
        <a href="/atlas/stars/black-holes/" class="featured-card glass-card">
          <span class="category-badge atlas">Stars</span>
          <h3>Black Holes: Where Gravity Rules</h3>
          <p>Understanding event horizons, singularities, Hawking radiation, and how gravitational waves revealed merging black holes.</p>
          <span class="card-arrow">Read Article →</span>
        </a>

        <!-- Choosing First Binoculars -->
        <a href="/observatory/binoculars/choosing-first-binoculars/" class="featured-card glass-card">
          <span class="category-badge observatory">Observatory</span>
          <h3>Choosing Your First Binoculars</h3>
          <p>Expert guide to selecting astronomy binoculars covering magnification, aperture, field of view, and recommended models for stargazing.</p>
          <span class="card-arrow">Read Article →</span>
        </a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="about">
    <div class="container">
      <h2 class="about-title">Your Gateway to the Cosmos</h2>
      <p class="about-text">
        The Astronomy Space is a curated resource for anyone fascinated by the universe.
        Whether you're a seasoned astronomer or just beginning your cosmic journey,
        we provide accessible, accurate information about celestial phenomena.
      </p>
      <p class="about-text">
        From real-time observations to comprehensive star catalogs and the latest
        discoveries in space science, our mission is to make the wonders of astronomy
        available to all.
      </p>
    </div>
  </section>
</MainLayout>

<style>
