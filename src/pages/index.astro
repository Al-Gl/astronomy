---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class="coming-soon-container">
		<div class="starfield"></div>
		<div class="content">
			<h1>The Astronomy Space</h1>
			<h2>Coming Soon</h2>
			<p>We are preparing to launch a new universe of astronomical data and cosmic discoveries. Check back shortly.</p>
		</div>
	</div>
</Layout>

<style>
	/* Reset and base */
	.coming-soon-container {
		position: relative;
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: #000;
		overflow: hidden;
		font-family: system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
	}

	/* Starfield background with multiple star layers */
	.starfield {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image:
			/* Large stars */
			radial-gradient(2px 2px at 20% 30%, white, transparent),
			radial-gradient(2px 2px at 60% 70%, white, transparent),
			radial-gradient(2px 2px at 90% 80%, white, transparent),
			radial-gradient(2px 2px at 15% 85%, white, transparent),
			/* Medium stars */
			radial-gradient(1.5px 1.5px at 50% 50%, rgba(255, 255, 255, 0.8), transparent),
			radial-gradient(1.5px 1.5px at 80% 10%, rgba(255, 255, 255, 0.8), transparent),
			radial-gradient(1.5px 1.5px at 40% 90%, rgba(255, 255, 255, 0.8), transparent),
			/* Small stars */
			radial-gradient(1px 1px at 30% 20%, rgba(255, 255, 255, 0.6), transparent),
			radial-gradient(1px 1px at 70% 60%, rgba(255, 255, 255, 0.6), transparent),
			radial-gradient(1px 1px at 10% 40%, rgba(255, 255, 255, 0.6), transparent),
			radial-gradient(1px 1px at 85% 45%, rgba(255, 255, 255, 0.6), transparent),
			radial-gradient(1px 1px at 55% 15%, rgba(255, 255, 255, 0.6), transparent);
		background-size: 200% 200%;
		background-position: 0% 0%;
		animation: stars 100s linear infinite;
	}

	@keyframes stars {
		from {
			background-position: 0% 0%;
		}
		to {
			background-position: -200% -200%;
		}
	}

	/* Content styling */
	.content {
		position: relative;
		z-index: 1;
		text-align: center;
		padding: 2rem;
		max-width: 600px;
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		color: #ffffff;
		margin: 0 0 1rem 0;
		letter-spacing: -0.02em;
		line-height: 1.1;
	}

	h2 {
		font-size: 2rem;
		font-weight: 400;
		color: rgba(255, 255, 255, 0.7);
		margin: 0 0 1.5rem 0;
	}

	p {
		font-size: 1.25rem;
		line-height: 1.6;
		color: rgba(255, 255, 255, 0.6);
		margin: 0;
	}

	/* Responsive design */
	@media (max-width: 640px) {
		h1 {
			font-size: 2.5rem;
		}

		h2 {
			font-size: 1.5rem;
		}

		p {
			font-size: 1rem;
		}

		.content {
			padding: 1rem;
		}
	}

	@media (min-width: 641px) and (max-width: 1024px) {
		h1 {
			font-size: 3rem;
		}
	}
</style>
