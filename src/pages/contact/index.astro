---
import MainLayout from '../../layouts/MainLayout.astro';
---

<MainLayout
  title="Contact - The Astronomy Space"
  description="Get in touch with The Astronomy Space for questions, feedback, or collaboration opportunities"
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1 class="hero-title">Contact Us</h1>
      <p class="hero-subtitle">
        Have a question, suggestion, or want to collaborate? We'd love to hear from you.
      </p>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="contact-content">
    <div class="container">
      <div class="contact-grid">

        <div class="contact-info">
          <h2>Get In Touch</h2>
          <p>
            Whether you have questions about astronomy, want to suggest new content,
            or are interested in collaboration opportunities, feel free to reach out.
          </p>

          <div class="info-items">
            <div class="info-item">
              <h3>Email</h3>
              <p><a href="mailto:contact@theastronomyspace.com">contact@theastronomyspace.com</a></p>
            </div>

            <div class="info-item">
              <h3>Response Time</h3>
              <p>We typically respond within 24-48 hours.</p>
            </div>

            <div class="info-item">
              <h3>Topics We Love</h3>
              <ul>
                <li>Astronomy questions and discussions</li>
                <li>Content suggestions and feedback</li>
                <li>Equipment reviews and recommendations</li>
                <li>Collaboration opportunities</li>
                <li>Bug reports and technical issues</li>
              </ul>
            </div>
          </div>
        </div>

        <div class="contact-form-wrapper">
          <form class="contact-form" method="POST" action="https://formsubmit.co/theastronomyspace@gmail.com">
            <!-- FormSubmit Configuration -->
            <input type="hidden" name="_subject" value="New contact form submission from The Astronomy Space">
            <input type="hidden" name="_next" value="https://theastronomyspace.com/contact/thank-you">
            <input type="hidden" name="_template" value="table">

            <!-- Honeypot antibot field (hidden from humans, visible to bots) -->
            <input type="text" name="_honey" style="display:none">

            <!-- Disable default captcha (we're using honeypot instead) -->
            <input type="hidden" name="_captcha" value="false">

            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" id="name" name="name" required />
            </div>

            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" required />
            </div>

            <div class="form-group">
              <label for="subject">Subject</label>
              <input type="text" id="subject" name="subject" required />
            </div>

            <div class="form-group">
              <label for="message">Message</label>
              <textarea id="message" name="message" rows="6" required></textarea>
            </div>

            <button type="submit" class="submit-button">Send Message</button>
          </form>
        </div>

      </div>
    </div>
  </section>
</MainLayout>

<style>
  /* Hero Section */
  .hero {
    padding: 6rem 0 4rem 0;
    text-align: center;
  }

  .hero-title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 400;
    margin: 0 0 1.5rem 0;
    letter-spacing: 0.02em;
    color: white;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 1.0625rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
    max-width: 40rem;
    margin: 0 auto;
    line-height: 1.8;
  }

  /* Contact Content */
  .contact-content {
    padding: 2rem 0 6rem 0;
  }

  .contact-grid {
    display: grid;
    gap: 4rem;
    grid-template-columns: 1fr;
    max-width: 1100px;
    margin: 0 auto;
  }

  .contact-info h2 {
    font-size: 1.5rem;
    font-weight: 400;
    color: white;
    margin: 0 0 1rem 0;
    letter-spacing: 0.01em;
  }

  .contact-info > p {
    font-size: 0.9375rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.8;
    margin: 0 0 2rem 0;
  }

  .info-items {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .info-item h3 {
    font-size: 1rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 0.5rem 0;
    letter-spacing: 0.01em;
  }

  .info-item p {
    font-size: 0.9375rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.6;
    margin: 0;
  }

  .info-item a {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .info-item a:hover {
    color: white;
  }

  .info-item ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .info-item li {
    font-size: 0.9375rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.8;
    padding-left: 1.5rem;
    position: relative;
  }

  .info-item li::before {
    content: "â†’";
    position: absolute;
    left: 0;
    color: rgba(255, 255, 255, 0.4);
  }

  /* Contact Form */
  .contact-form-wrapper {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 8px;
    padding: 2rem;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-size: 0.875rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.8);
    letter-spacing: 0.02em;
  }

  .form-group input,
  .form-group textarea {
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    color: white;
    font-family: inherit;
    font-size: 0.9375rem;
    transition: all 0.2s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.2);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .submit-button {
    padding: 0.875rem 2rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 4px;
    color: white;
    font-family: inherit;
    font-size: 0.9375rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    cursor: pointer;
    transition: all 0.2s ease;
    align-self: flex-start;
  }

  .submit-button:hover {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.25);
  }

  /* Desktop: 2-column */
  @media (min-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }
  }
</style>
