---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'The Astronomy Space',
  description = 'Explore the cosmos through data-driven insights and celestial discoveries'
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Top Navigation -->
    <nav class="top-nav">
      <div class="nav-container">
        <a href="/" class="nav-brand">
          <img src="/images/logo.png" alt="The Astronomy Space" class="logo-icon" />
          <span class="brand-name">The Astronomy Space</span>
        </a>
        <div class="nav-links">
          <a href="/atlas/" class="nav-link">Cosmic Atlas</a>
          <a href="/observatory/" class="nav-link">Observatory</a>
          <a href="/chronicles/" class="nav-link">Cosmic Chronicles</a>
        </div>
      </div>
    </nav>

    <!-- Stars Toggle -->
    <button class="stars-toggle" id="starsToggle" aria-label="Toggle animated stars">
      <svg class="toggle-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <path d="M12 2L14.4 8.6L21 9.2L16 14L17.8 21L12 17.4L6.2 21L8 14L3 9.2L9.6 8.6L12 2Z"/>
      </svg>
      <span class="toggle-label">Stars</span>
    </button>

    <!-- Animated twinkling stars (hidden by default) -->
    <div class="animated-stars" id="animatedStars">
      <div class="star star-1"></div>
      <div class="star star-2"></div>
      <div class="star star-3"></div>
      <div class="star star-4"></div>
      <div class="star star-5"></div>
      <div class="star star-6"></div>
      <div class="star star-7"></div>
      <div class="star star-8"></div>
      <div class="star star-9"></div>
      <div class="star star-10"></div>
      <div class="star star-11"></div>
      <div class="star star-12"></div>
      <div class="star star-13"></div>
      <div class="star star-14"></div>
      <div class="star star-15"></div>
      <div class="star star-16"></div>
      <div class="star star-17"></div>
      <div class="star star-18"></div>
      <div class="star star-19"></div>
      <div class="star star-20"></div>
      <div class="star star-21"></div>
      <div class="star star-22"></div>
      <div class="star star-23"></div>
      <div class="star star-24"></div>
      <div class="star star-25"></div>
      <div class="star star-26"></div>
      <div class="star star-27"></div>
      <div class="star star-28"></div>
      <div class="star star-29"></div>
      <div class="star star-30"></div>
      <div class="star star-31"></div>
      <div class="star star-32"></div>
      <div class="star star-33"></div>
      <div class="star star-34"></div>
      <div class="star star-35"></div>
      <div class="star star-36"></div>
    </div>
    <div class="app-container">
      <header>
        <slot name="header" />
      </header>

      <main>
        <slot />
      </main>

      <footer class="site-footer">
        <div class="footer-container">
          <div class="footer-content">
            <p class="footer-copyright">Â© 2026 The Astronomy Space. All rights reserved.</p>
            <nav class="footer-links">
              <a href="/contact/" class="footer-link">Contact</a>
            </nav>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>

<script>
  // Stars toggle functionality
  const starsToggle = document.getElementById('starsToggle');
  const animatedStars = document.getElementById('animatedStars');

  // Check localStorage for saved preference (default: off)
  const starsEnabled = localStorage.getItem('starsEnabled') === 'true';

  // Apply initial state
  if (starsEnabled) {
    animatedStars?.classList.add('visible');
    starsToggle?.classList.add('active');
  }

  // Toggle handler
  starsToggle?.addEventListener('click', () => {
    const isVisible = animatedStars?.classList.toggle('visible');
    starsToggle.classList.toggle('active', isVisible);
    localStorage.setItem('starsEnabled', isVisible ? 'true' : 'false');
  });
</script>

<style>
  .app-container {
    position: relative;
    z-index: 1;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }

  /* Top Navigation */
  .top-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 99;
    background: rgba(10, 15, 30, 0.8);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0.75rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .nav-brand {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--color-text-primary);
    font-weight: 600;
    font-size: 1.1rem;
    transition: color 0.3s ease;
  }

  .nav-brand:hover {
    color: var(--color-accent-cyan);
  }

  .logo-icon {
    width: 28px;
    height: 28px;
    flex-shrink: 0;
    object-fit: contain;
  }

  .brand-name {
    white-space: nowrap;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-link {
    padding: 0.5rem 1rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .nav-link:hover {
    color: var(--color-text-primary);
    background: rgba(6, 182, 212, 0.1);
  }

  /* Add padding to body to account for fixed nav */
  .app-container {
    padding-top: 60px;
  }

  /* Stars Toggle Button */
  .stars-toggle {
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 100;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 2rem;
    color: rgba(255, 255, 255, 0.4);
    font-size: 0.75rem;
    font-family: inherit;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .stars-toggle:hover {
    background: rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.6);
  }

  .stars-toggle.active {
    background: rgba(6, 182, 212, 0.15);
    border-color: rgba(6, 182, 212, 0.3);
    color: rgba(6, 182, 212, 0.9);
  }

  .toggle-icon {
    width: 14px;
    height: 14px;
  }

  .stars-toggle.active .toggle-icon {
    fill: rgba(6, 182, 212, 0.3);
  }

  .toggle-label {
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Responsive Navigation */
  @media (max-width: 768px) {
    .nav-container {
      padding: 0.5rem 1rem;
    }

    .brand-name {
      display: none;
    }

    .nav-links {
      gap: 0.25rem;
    }

    .nav-link {
      padding: 0.4rem 0.75rem;
      font-size: 0.85rem;
    }

    .stars-toggle {
      top: 0.75rem;
      right: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    .nav-link {
      padding: 0.4rem 0.5rem;
      font-size: 0.8rem;
    }
  }

  /* Footer */
  .site-footer {
    background: rgba(0, 0, 0, 0.5);
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    padding: 2rem 0;
    margin-top: 4rem;
  }

  .footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .footer-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .footer-copyright {
    font-size: 0.875rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.4);
    margin: 0;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-link {
    font-size: 0.875rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: rgba(255, 255, 255, 0.8);
  }

  @media (max-width: 640px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
  }
</style>
